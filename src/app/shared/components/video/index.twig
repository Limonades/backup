{% if block.backgroundImage | length %}
    {% include "/shared/functions/addImage.twig" with {
    'image': block.backgroundImage[0],
    'bgImage': true,
    'selector': '.video'~year.title~loop.index,
    'format':block.backgroundImage[0].extension
    } %}
{% endif %}
<section class="page video video--{{ year.title~loop.index }}" id="page4">
    <div class="copy video__copy" style="opacity: 1;">

        <div class="section-header">
            <div class="section-header__year">
                <h2>
                    {{ year.title }}
                </h2>
            </div>
            <div class="section-header__title">
                <h2>
                    {{ block.headerTitle }}
                </h2>
            </div>
        </div>

        {% if block.anchorImage | length %}
          {% if block.anchorImage[0].kind == 'image' %}
            {% include "/shared/functions/addImage.twig" with {
            'image': block.anchorImage[0],
            'bgImage': true,
            'selector': '.video__content--'~year.title~loop.index,
            'format':block.anchorImage[0].extension
            } %}
            {% endif %}
        {% endif %}

        <div class="video__content video__content--{{ year.title~loop.index }}">

        {% if block.anchorImage | length %}
            {% if block.anchorImage[0].kind == 'video' %}
                <div class="video__video-bg">
                    <video muted loop autoplay >
                        <source src="{{ block.anchorImage[0].url }}" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
                <a class="video__play-btn" href="#video-modal-{{ loop.index }}">
                    <figure>
                        <img src="/assets/iconmonstr-media-control-48.svg" alt="play">
                    </figure>
                    <p class="h5">
                        Watch the video.
                    </p>
                </a>
            {% else %}
                <div class="video__play-btn"></div>
            {% endif %}
        {% else %}
            <div class="video__play-btn"></div>
        {% endif %}

            {#TODO(front): исправить отображение video__description так как если не будет ссылки текст съезжает влево #}


            <div class="video__description">
                <h3>
                    {{ block.anchorDescription }}
                </h3>
            </div>
        </div>
        <div class="video__modal" id="video-modal-{{ loop.index }}">
            <div class="video__modal-close-btn">
                <div class="plus-minus close"></div>
            </div>
            <div class="video__modal-container">
                <video id="video" class="video__modal-video" autoplay controls>
                    <source src="{{ block.anchorImage[0].url }}" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
                {#<div class="video__controls">#}
                    {#<button id="playpause" title="play">ololo</button>#}
                    {#<button id="mute">Mute</button>#}
                {#</div>#}
                {#<div class="progressTime">#}
                    {#Current play time: <span class="current"></span>#}
                {#</div>#}
                {#<div id="progressBar"><span id="progress"></span></div>#}
            </div>
        </div>
    </div>
    {% if block.parallaxImage | length %}
        {% include "/shared/functions/addImage.twig" with { 'image': block.parallaxImage[0] , 'picture_class':'video__img-bg' , 'format':block.parallaxImage[0].extension } %}
    {% endif %}
</section>
